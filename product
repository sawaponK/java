
public class Product
{
	/// instant variables
	private String name;
	private double price;
	private double weight;
	private int quantity;
	//// methods
	public Product()
	{
		name = "";
		price = 0;
		weight = 0;
		quantity = 0;
	}
	
	public Product (String newName, double newPrice, double newWeight, int newQuantity)
	{
		name = newName;
		price = newPrice;
		weight = newWeight;
		quantity = newQuantity;
	}
	
	public void setName(String newName)
	{
		name = newName;
	}
	public String getName()
	{
		return name;
	}
	public void setPrice(double newPrice)
	{
		price = newPrice;
	}
	public double getPrice()
	{
		return price;
	}
	public void setWeight(double newWeight)
	{
		weight = newWeight;
	}
	public double getWeight()
	{
		return weight;
	}
	public void setQuantity0(int newQuantity)
	{
		quantity = newQuantity;
	}
	public int getQuantity()
	{
		return quantity;
	}
}
